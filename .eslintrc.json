{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "require-jsdoc": 0,
      "max-len": 0,
      "camelcase": 0,
      "guard-for-in": 0,
      "prefer-spread": 0,
      "quotes": ["error", "double"],
      "object-curly-spacing": ["error", "always"],
      "use-isnan": "off"
    }
}
